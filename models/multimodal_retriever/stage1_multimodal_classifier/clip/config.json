{
    "model": "openai/clip-vit-base-patch32",
    "classes": [
        "handwritten",
        "form",
        "layout",
        "table/list",
        "others",
        "free_text",
        "Image/Photo",
        "figure/diagram",
        "Yes/No"
    ],
    "max_len": 77,
    "hidden_size": 512,
    "lr": 2e-5,
    "epoch": 100,
    "batch_size": 8,
    "warmup_steps": 100,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "early_stopping_patience": 3,
    "threshold": 0.5,
    "use_mixed_precision": true,
    "freeze_clip": true,
    "dropout": 0.2,
    "use_attention_fusion": true,
    "num_attention_heads": 8,
    "save_dir": "checkpoints/clip_classifier"
}